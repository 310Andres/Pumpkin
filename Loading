<script>
(function () {
  const bar = document.getElementById('bar');
  const pct = document.getElementById('percent');

  let progress = 0;
  let direction = 1;

  function tick() {
    progress += direction * Math.floor(Math.random() * 8 + 3);
    if (progress >= 100) { direction = -1; progress = 100; }
    if (progress <= 0)   { direction = 1;  progress = 0; }

    bar.style.width = progress + '%';
    pct.textContent = 'Loadingâ€¦ ' + progress + '%';
  }

  setInterval(tick, 380);
})();
</script>
